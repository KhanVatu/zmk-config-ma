#include <dt-bindings/zmk/matrix_transform.h> // Put this with the other includes at the top of your dtsi
#include "ma_right.overlay"
#include "ma_left.overlay"
/ {
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <4>;
        map = <
        //  LKey 1 |LKey 2 |LKey 3 |LKey 4 |LKey 5 |LKey 6 |LKey 7              RKey 8 |RKey 9 |RKey 10 |RKey 11 |RKey 12 |RKey 13 |RKey 14
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)             RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)
        //  LKey 15 |LKey 16 |LKey 17 |LKey 18 |LKey 19 |LKey 20 |LKey 21       RKey 22 |RKey 23 |RKey 24 |RKey 25 |RKey 26 |RKey 27 |RKey 28
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)             RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
        //  LKey 29 |LKey 30 |LKey 31 |LKey 32 |LKey 33 |LKey 34 |LKey 35       RKey 36 |RKey 37 |RKey 38 |RKey 39 |RKey 40 |RKey 41 |RKey 42
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)             RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
        //  LKey 43 |LKey 44 |LKey 45 |LKey 46 |LKey 47 |LKey 48                        |RKey 49 |RKey 50 |RKey 51 |RKey 52 |RKey 53 |RKey 54
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                             RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13)
        >;
    };
};
/ {
    physical_layout0: physical_layout_0 { // First physical layout, use different naming for other layouts
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        kscan = <&kscan0>; // Label of the kscan node, optional if all layouts use the same
        transform = <&default_transform>; // Label of the matrix transform for this layout
    };
};
/ {
    chosen {
        zmk,kscan = &default_kscan;
        zmk,kscan = &default_transform;
    };
};